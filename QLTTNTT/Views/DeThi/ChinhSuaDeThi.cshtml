        $.ajax({
            type: 'post',
            async: false,
            url: APIURL + '/api/DeThiApi/GetByID?id=' + deThiID,
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data != null && data != "") {
                    AppendDeThi(data);
                }
