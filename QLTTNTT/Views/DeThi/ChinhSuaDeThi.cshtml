<script type="text/javascript">
    const APIURL = window.location.protocol + '//' + window.location.hostname + ':' + window.location.port;
    var arrCauHoiDeThi = [];
    var arrIDCauHoi = [];
    var deThiID = '@ViewBag.DeThiID';
    $(function () {
