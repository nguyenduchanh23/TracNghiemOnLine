        $.ajax({
            type: 'delete',
            async: false,
            url: APIURL + '/api/DeThiApi/DeThi_CauHoi_Delete?id=' + deThiID,
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (data != null && data != "") {

                }
            },
            error: function (err) {
                alert('Lỗi !');
            }
        });
