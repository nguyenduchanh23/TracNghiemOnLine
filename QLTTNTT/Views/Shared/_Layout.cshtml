    <link href="~/template_admin/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/Themes/Bootstrap/Select2/select2.min.css" rel="stylesheet" />
    <link href="~/Themes/Bootstrap/Select2/select2-bootstrap4.min.css" rel="stylesheet" />
    <link href="~/template_admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link href="~/Themes/bower_components/bootstrap/dist/css/bootstrap-theme.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <link href="~/themes/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet">

